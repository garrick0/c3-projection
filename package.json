{
  "name": "@garrick0/c3-projection",
  "version": "0.1.0-dev.0",
  "description": "Graph transformations and analytical views for C3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "demo:quick-start": "tsx examples/quick-start.ts ./src",
    "demo:self-analysis": "tsx examples/analyze-self.ts",
    "demo:full": "tsx examples/generate-module-view.ts",
    "demo:all": "npm run demo:quick-start && npm run demo:self-analysis",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run test",
    "prepare": "npm run build",
    "version:dev": "npm version prerelease --preid=dev.$(git rev-parse --short HEAD) --no-git-tag-version",
    "version:canary": "npm version prerelease --preid=canary"
  },
  "author": "garrick0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/garrick0/c3-projection.git"
  },
  "dependencies": {
    "@garrick0/c3-parsing": "dev",
    "@garrick0/c3-shared": "dev",
    "dagre": "^0.8.5"
  },
  "devDependencies": {
    "@types/dagre": "^0.7.52",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.9",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
